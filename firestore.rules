rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Disasters collection
    match /disasters/{disasterId} {
      // Anyone logged in can read all disasters
      allow read: if request.auth != null;

      // Logged-in users can create disasters (must set their own userId)
      allow create: if request.auth != null
                    && request.resource.data.userId == request.auth.uid;

      // Only the creator can update/delete their own disaster
      allow update, delete: if request.auth != null
                            && resource.data.userId == request.auth.uid;
    }

    // Emergencies collection
    match /emergencies/{emergencyId} {
      allow read: if request.auth != null;
      allow create: if request.auth != null
                    && request.resource.data.userId == request.auth.uid;
      allow update, delete: if request.auth != null
                            && resource.data.userId == request.auth.uid;
    }

    // NGOs collection
    match /ngos/{ngoId} {
      allow read: if true;
      allow create: if request.auth != null
                    && request.resource.data.userId == request.auth.uid;
      allow update: if true;
      allow delete: if request.auth != null
                    && resource.data.userId == request.auth.uid;
    }

    // News collection (AI-verified news)
    match /news/{newsId} {
      allow read: if request.auth != null;
      allow create: if request.auth != null
                    && request.resource.data.userId == request.auth.uid
                    && request.resource.data.verified == true;
      allow update, delete: if request.auth != null
                            && resource.data.userId == request.auth.uid;
    }

    // Block all other collections by default
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
